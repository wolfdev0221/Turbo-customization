{% assign image = section.settings.banner_image_p %}

<div class="page_banner_container_p">
  {% render 'image-element',
              image: image,
  alt: page.title,
  stretch_width: true,
  progressive: true
  %}
  <div class="banner_info_p">
    <h1>{{ page.title }}</h1>
    <div class="banner_text_p">
      {{ section.settings.banner_text_p }}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Page Banner",
    "settings": [
	  {
		"type": "image_picker",
		"id": "banner_image_p",
		"label": "Banner image"
	  },
	  {
		"type": "richtext",
		"id": "banner_text_p",
		"label": "Banner text"
	  }
	]
  }
{% endschema %}

