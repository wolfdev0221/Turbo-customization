<div class="page_conseils_content_p">
  <div class="container">
    {% for block in section.blocks %}
    <div class="section_container_p">
      {% comment %}
      {% if block.type == "two-one-section" %}
      {% assign id = "conseils1" %}
      {% elsif block.type == "one-two-section" %}
      {% assign id = "conseils2" %}
      {% elsif block.type == "one-one-section" %}
      {% assign id = "conseils" %}
      {% endif %}
      {% endcomment %}
      <div class="sub_title_container_p">
        <div class="subtitle_p">
          <span>{{ block.settings.title }}</span>
        </div>
      </div>
      {% if block.type == "two-one-section" %}
      <div class="section_wrapper_p two--one--layout">
        <div class="section_left_p">
          {{ block.settings.text }}
          <div id="peint"></div>
        </div>
        <div class="section_right_p">
          <img src="{{ block.settings.image | img_url: 'master'}}" alt="{{ block.settings.title }}">
        </div>
      </div>
      {% elsif block.type == "one-two-section"%}
      <div class="section_wrapper_p one--two--layout">
        <div class="section_left_p">
          <img src="{{ block.settings.image | img_url: 'master'}}" alt="{{ block.settings.title }}">
        </div>
        <div class="section_right_p">
          {{ block.settings.text }}
          <div id="conseils"></div>
        </div>
      </div>
      {% elsif block.type == "one-one-section"%}
      <div class="section_wrapper_p one--one--layout">
        <div class="section_left_p">
          {{ block.settings.text }}
          <div id="fiche"></div>
        </div>
        <div class="section_right_p">
          {% include 'include-contact-form', context: 'contact-template' %}
        </div>
      </div>
      {% elsif block.type == "one-section"%}
      <dl class="faqAccordion">
        <dt><button type="button" aria-controls="panel-01" aria-expanded="true">VERSION FRANÃ‡AISE</button></dt>
        <dd id="panel-01" aria-hidden="false">
          <a target="_blank" href="{{ block.settings.link1 }}">{{ block.settings.name1 }}</a>
          <a target="_blank" href="{{ block.settings.link2 }}">{{ block.settings.name2 }}</a>
          <a target="_blank" href="{{ block.settings.link3 }}">{{ block.settings.name3 }}</a>
          <a target="_blank" href="{{ block.settings.link4 }}">{{ block.settings.name4 }}</a>
          <a target="_blank" href="{{ block.settings.link5 }}">{{ block.settings.name5 }}</a>
        </dd>
        <dt><button type="button" aria-controls="panel-01" aria-expanded="true">VERSION ANGLAISE</button></dt>
        <dd id="panel-01" aria-hidden="false">
          <a target="_blank" href="{{ block.settings.link6 }}">{{ block.settings.name6 }}</a>
          <a target="_blank" href="{{ block.settings.link7 }}">{{ block.settings.name7 }}</a>
          <a target="_blank" href="{{ block.settings.link8 }}">{{ block.settings.name8 }}</a>
          <a target="_blank" href="{{ block.settings.link9 }}">{{ block.settings.name9 }}</a>
          <a target="_blank" href="{{ block.settings.link10 }}">{{ block.settings.name10 }}</a>
        </dd>        
      </dl>      
      {% endif %}
    </div>
    {% endfor %}
  </div>
</div>

